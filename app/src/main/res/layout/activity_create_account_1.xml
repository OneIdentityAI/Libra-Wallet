<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dip"
                    android:layout_height="0dip"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical">
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="40dip" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="300dip"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:src="@drawable/logo"/>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="40dip" />

                        <TextView
                            android:fontFamily="@font/nbi_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:textColor="@color/colorLightIndigo"
                            android:text="@string/create_an_account" />

                        <TextView
                            android:fontFamily="@font/nbi_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:textColor="@color/colorLightIndigo"
                            android:text="@string/is_free" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="30dip" />

                        <TextView
                            android:fontFamily="@font/nbi_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:text="@string/your_full_name" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="20dip" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">
                                        <TextView
                                            android:fontFamily="@font/nbi_light"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="16sp"
                                            android:textColor="@color/colorGray"
                                            android:text="@string/first_name" />

                                        <Space
                                            android:layout_width="wrap_content"
                                            android:layout_height="10dip" />

                                        <EditText
                                            android:id="@+id/input_first_name"
                                            android:fontFamily="@font/nbi_b"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="text"
                                            android:imeOptions="actionNext"
                                            android:hint=""
                                            android:text=""
                                            android:textSize="16sp"
                                            android:textColor="@color/colorInput"
                                            android:background="@drawable/rounded_input_torquoise"
                                            android:padding="10dip"
                                            app:fontFamily="sans-serif"/>
                                </LinearLayout>
                                <Space
                                    android:layout_width="10dip"
                                    android:layout_height="0dip" />
                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">
                                        <TextView
                                            android:fontFamily="@font/nbi_light"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="16sp"
                                            android:textColor="@color/colorGray"
                                            android:text="@string/last_name" />

                                        <Space
                                            android:layout_width="wrap_content"
                                            android:layout_height="10dip" />

                                        <EditText
                                            android:id="@+id/input_last_name"
                                            android:fontFamily="@font/nbi_b"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="text"
                                            android:imeOptions="actionDone"
                                            android:hint=""
                                            android:text=""
                                            android:textSize="16sp"
                                            android:textColor="@color/colorInput"
                                            android:background="@drawable/rounded_input_torquoise"
                                            android:padding="10dip"
                                            app:fontFamily="sans-serif"/>
                                </LinearLayout>
                        </LinearLayout>
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="20dip" />

                        <TextView
                            android:fontFamily="@font/nbi_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorGray"
                            android:text="@string/legal_name_message" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="40dip" />

                        <Button
                            android:id="@+id/button_continue"
                            android:fontFamily="@font/nbi_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:minWidth="200dip"
                            android:padding="16dip"
                            android:textSize="16sp"
                            android:textColor="@color/colorWhite"
                            android:text="@string/continue_text"
                            android:background="@drawable/rounded_indigo"/>
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="40dip" />

                </LinearLayout>
        </ScrollView>
</LinearLayout>