<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_side_menu"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/navigation_active"/>

                <Space
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="1"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/nbi_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:textColor="@color/colorLightIndigo"
                            android:text="@string/contacts" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="30dip" />

                        <EditText
                            android:id="@+id/input_search"
                            android:fontFamily="@font/nbi_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:hint="@string/search"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/colorInput"
                            android:background="@drawable/rounded_input_torquoise"
                            android:padding="14dip"
                            app:fontFamily="sans-serif"/>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="20dip" />
                        <LinearLayout
                            android:id="@+id/layout_add_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="20dip"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/plus_active"/>

                                <Space
                                    android:layout_width="20dip"
                                    android:layout_height="10dip" />
                                <TextView
                                    android:fontFamily="@font/nbi_b"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorTurquoise"
                                    android:text="@string/add_new" />
                        </LinearLayout>
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="20dip" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none" />
                </LinearLayout>
        </ScrollView>
</LinearLayout>